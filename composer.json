{
    "name": "rebelcode/module-testing",
    "description": "Tools for testing RebelCode modules.",
    "type": "library",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "RebelCode",
            "email": "dev@rebelcode.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^5.4 | ^7.0",
        "ptrofimov/xpmock": "^1.1",
        "phpunit/phpunit": "^4.8",
        "rebelcode/modular": "^0.1-alpha1",
        "dhii/container-helper-base": "^0.1-alpha7",
        "dhii/data-container-interface": "^0.2-alpha3",
        "dhii/data-container-base": "^0.1-alpha2",
        "dhii/factory-base": "^0.1-alpha3"
    },
    "require-dev": {
        "dhii/php-cs-fixer-config": "^0.1",
        "codeclimate/php-test-reporter": "<=0.3.2"
    },
    "autoload": {
        "psr-4": {
            "RebelCode\\Modular\\Testing\\": "src"
        }
    },
    "scripts": {
        "test": "phpunit",
        "csfix": "php-cs-fixer fix -vvv"
    },
    "bin": ["bin/rcmod-gen-test.php"]
}
